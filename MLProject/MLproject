  main:
    parameters:
      data_path:     {type: str, default: "preprocessed_cryptonews.csv"}
      output_model:  {type: str, default: "best_lgbm_model.pkl"}
    command: "python modelling.py --data_path {data_path} --output_model {output_model}"
